{
  "info": {
    "name": "AI Agent Base - Auth & Chat",
    "_postman_id": "ai-agent-base-collection",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Signup",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"user@example.com\",\n  \"username\": \"user1\",\n  \"name\": \"User Name\",\n  \"dob\": \"1990-01-01\",\n  \"password\": \"password123\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/v1/auth/signup",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "v1",
            "auth",
            "signup"
          ]
        }
      }
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/x-www-form-urlencoded"
          }
        ],
        "body": {
          "mode": "urlencoded",
          "urlencoded": [
            { "key": "username", "value": "user@example.com", "type": "text" },
            { "key": "password", "value": "password123", "type": "text" }
          ]
        },
        "url": {
          "raw": "{{base_url}}/api/v1/auth/login",
          "host": ["{{base_url}}"],
          "path": ["api","v1","auth","login"]
        }
      }
    },
    {
      "name": "Chat (no image)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{auth_token}}" }
        ],
        "body": {
          "mode": "formdata",
          "formdata": [
            { "key": "user_input_text", "value": "Hello, tell me a joke", "type": "text" }
          ]
        },
        "url": {
          "raw": "{{base_url}}/api/v1/chat/",
          "host": ["{{base_url}}"],
          "path": ["api","v1","chat",""]
        }
      }
    },
    {
      "name": "Chat (with image)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{auth_token}}" }
        ],
        "body": {
          "mode": "formdata",
          "formdata": [
            { "key": "user_input_text", "value": "Describe this image", "type": "text" },
            { "key": "image_file", "type": "file", "src": "" }
          ]
        },
        "url": {
          "raw": "{{base_url}}/api/v1/chat/",
          "host": ["{{base_url}}"],
          "path": ["api","v1","chat",""]
        }
      }
    }
  ]
}
